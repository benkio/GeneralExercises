-- Better error messages and diagnostics
:set -fdiagnostics-color=always
:set -ferror-spans
:set -fprint-expanded-synonyms
:set -fprint-potential-instances
:set -fwarn-unused-binds -fwarn-unused-imports

-- Nicer printing
:set -fprint-evidence

-- Enable useful extensions by default (add/remove as you like)
:seti -XOverloadedStrings
:seti -XOverloadedRecordDot
:seti -XOverloadedLabels
:seti -XDuplicateRecordFields
:seti -XNoFieldSelectors          -- if you prefer lenses or record-dot
:seti -XDataKinds
:seti -XTypeApplications
:seti -XScopedTypeVariables
:seti -XApplicativeDo
:seti -XGADTs
:seti -XTypeFamilies
:seti -XLambdaCase
:seti -XTupleSections
:seti -XViewPatterns
:seti -XBlockArguments
:seti -XNamedFieldPuns
:seti -XRecordWildCards

-- Multi-line input (very handy)
:set +m

:set prompt "\ESC[0;35mλ> \ESC[m"   -- purple λ prompt (optional but pretty)
-- Show type after every successful binding (super useful)
:set +t

-- Show statistics sometimes (memory/time)
:set +s

-- Reload automatically when you :r (works with ghcid too)
:set -fdefer-typed-holes
:set -fdefer-type-errors
:set -Wdeferred-type-errors
:set -Wtyped-holes

-- Optional: load common modules automatically
:set -isrc
:set -iapp
:load Main

-- Optional: pretty warnings in color (GHC 9.6+)
:set -fdiagnostics-as-json   -- if you use ghcid + hls together, sometimes helpful
